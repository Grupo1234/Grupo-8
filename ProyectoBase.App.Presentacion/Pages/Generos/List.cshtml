@page
@model ProyectoBase.App.Presentacion.Pages.Generos.ListModel
@{
   var searchString = Model.searchString; 
}
<h1>Listado de Generos</h1>
<p>
    @Html.ActionLink("Create New", "./List")
</p>

@using (Html.BeginForm())
{
    <p>
        Buscar x Nombre: @Html.TextBox("SearchString")  
        <input type="submit" value="Search" />
    </p>
}

<table class="table">
    @foreach (var genero in Model.generos)
    {
        <tr>
            <td>@genero.id</td>
            
            <td>@genero.nombre</td>
            
            <td>
                <a class="btn btn-primary table-btn" asp-page="./Details" asp-route-generoId="@genero.id">
                    Detalle</a>
            </td>

            <td>
                <a class="btn btn-primary table-btn" asp-page="./Edit" asp-route-generoId="@genero.id">
                    Editar
                </a>
            </td> 

            <td>
                <a class="btn btn-danger table-btn" asp-page="./Delete" asp-route-generoId="@genero.id">
                    Eliminar
                </a>
            </td> 
        </tr>
    }
</table>

<a asp-page=".\Edit" class="btn btn-primary">Adicionar una genero</a>
