@page
@model ProyectoBase.App.Presentacion.Pages.Agencias.ListModel
@{
   var searchString = Model.searchString; 
}
<h1>Listado de Agencias</h1>
<p>
    @Html.ActionLink("Create New", "./List")
</p>

@using (Html.BeginForm())
{
    <p>
        Buscar x Nombre: @Html.TextBox("SearchString")  
        <input type="submit" value="Search" />
    </p>
}

<table class="table">
    @foreach (var agencia in Model.agencias)
    {
        <tr>
            <td>@agencia.id</td>
            <td>@agencia.nit</td>
            <td>@agencia.nombre</td>
            <td>@agencia.direccion</td>
            <td>
                <a class="btn btn-primary table-btn" asp-page="./Details" asp-route-agenciaId="@agencia.id">
                    Detalle</a>
            </td>

            <td>
                <a class="btn btn-primary table-btn" asp-page="./Edit" asp-route-agenciaId="@agencia.id">
                    Editar
                </a>
            </td> 

            <td>
                <a class="btn btn-danger table-btn" asp-page="./Delete" asp-route-agenciaId="@agencia.id">
                    Eliminar
                </a>
            </td> 
        </tr>
    }
</table>

<a asp-page=".\Edit" class="btn btn-primary">Adicionar una agencia</a>

